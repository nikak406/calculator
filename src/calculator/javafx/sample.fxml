<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<GridPane fx:controller="calculator.javafx.Controller"
		  xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
	<padding>
		<Insets top="10" right="10" bottom="10" left="10"/>
	</padding>
	<Label fx:id="resultLabel" GridPane.columnIndex="0" GridPane.rowIndex="0"
		   GridPane.halignment="RIGHT" />
	<TextField fx:id="calculationField" GridPane.columnIndex="0" GridPane.rowIndex="1"
		   GridPane.halignment="RIGHT" alignment="CENTER_RIGHT"/>
	<HBox GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="RIGHT" spacing="10" alignment="BOTTOM_RIGHT">
		<Label fx:id="memoryLabel" text="" prefWidth="55" alignment="TOP_CENTER">
            <font>
               <Font size="24"/>
            </font>
        </Label>
		<Button fx:id="memoryRead" text="MR" prefWidth="55"/>
		<Button fx:id="cancel" text="C" prefWidth="120"/>
		<Button fx:id="backspace" text="bcsp" prefWidth="120"/>
	</HBox>
	<HBox GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="RIGHT" spacing="10" alignment="BOTTOM_RIGHT">
		<Button fx:id="seven" text="7" prefWidth="55"/>
		<Button fx:id="eight" text="8" prefWidth="55"/>
		<Button fx:id="nine" text="9" prefWidth="55"/>
		<Button fx:id="divide" text="/" prefWidth="55"/>
		<Button fx:id="openLap" text="(" prefWidth="120"/>
	</HBox>
	<HBox GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.halignment="RIGHT" spacing="10" alignment="BOTTOM_RIGHT">
		<Button fx:id="four" text="4" prefWidth="55"/>
		<Button fx:id="five" text="5" prefWidth="55"/>
		<Button fx:id="six" text="6" prefWidth="55"/>
		<Button fx:id="multiply" text="*" prefWidth="55"/>
		<Button fx:id="closeLap" text=")" prefWidth="120"/>
	</HBox>
	<HBox GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.halignment="RIGHT" spacing="10" alignment="BOTTOM_RIGHT">
		<Button fx:id="one" text="1" prefWidth="55"/>
		<Button fx:id="two" text="2" prefWidth="55"/>
		<Button fx:id="three" text="3" prefWidth="55"/>
		<Button fx:id="plus" text="+" prefWidth="55"/>
		<Button fx:id="memory" text="M" prefWidth="120"/>
	</HBox>
	<HBox GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.halignment="RIGHT" spacing="10" alignment="BOTTOM_RIGHT">
		<Button fx:id="zero" text="0" prefWidth="55"/>
		<Button fx:id="dot" text="." prefWidth="55"/>
		<Button fx:id="power" text="^" prefWidth="55"/>
		<Button fx:id="minus" text="-" prefWidth="55"/>
		<Button fx:id="equals" text="=" prefWidth="120"/>
	</HBox>
</GridPane>
